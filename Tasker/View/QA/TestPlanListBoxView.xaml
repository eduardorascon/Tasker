<UserControl x:Class="Tasker.View.QA.TestPlanListBoxView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:classes="clr-namespace:Tasker.Classes"
			 mc:Ignorable="d" 
			 d:DesignHeight="500" d:DesignWidth="350"
				 DataContext="{Binding TestPlanListBoxViewModel,
								   Source={StaticResource Locator}}"
	>

	<Grid x:Name="Principal">
		
		<!--#region Dimension -->
		<Grid.RowDefinitions>
			<RowDefinition Height="20" />
			<RowDefinition Height="28" />
			<RowDefinition  />
		</Grid.RowDefinitions>
		<!--#endregion -->

		<!--#region Filter -->
		<classes:FilterControl  Margin="1" Height="22" Header="Search item here"
							Grid.Row="1"    
							TargetControl="{Binding ElementName=ListTestPlan}"
							FilterTextBindingPath="Description">
			<classes:FilterControl.ListTextBindingPath>
				<classes:FilterAdapter Title="Test Plan Id" PropertyBound="TestPlanIdString"/>
				<classes:FilterAdapter Title="Description" PropertyBound="Description"/>
			</classes:FilterControl.ListTextBindingPath>
		</classes:FilterControl>    
		<!--#endregion -->

		<!--#region Title -->

		<Grid Grid.Row="0">
			<Grid.Background>
				<SolidColorBrush Color="{DynamicResource AccentColor}"></SolidColorBrush>
			</Grid.Background>
			<TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center" Text="Test Plan List" FontSize="13" FontWeight="SemiBold" />
		</Grid>

		<!--#endregion -->

		<Grid x:Name="Items" Grid.Row="2">
			<!--#region Dimension -->
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="30*" />
			</Grid.RowDefinitions>
			<!--#endregion -->
		
				<!--#region ListBox -->
			<ListBox x:Name="ListTestPlan" Grid.Row="1"
				 Height="auto"
				 Background="#4F4F4D4D"
				 BorderBrush="Transparent"
				 ItemContainerStyle="{StaticResource RedGlowItemContainer1}"
				 ItemsSource="{Binding TestPlanList}"
				 SelectedItem="{Binding SelectedTestPlan}">

				<ListBox.InputBindings>
					<MouseBinding MouseAction="LeftDoubleClick"
				Command="{Binding NewSubTaskCommand}" />
				</ListBox.InputBindings>

				<ListBox.ItemTemplate>
					<DataTemplate>
						<Grid
						Background="#20A9A9A9"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"			
						Width="310">

							<Grid>
								
								<!--#region Dimension -->
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="40"/>
									<ColumnDefinition Width="60*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="30"></RowDefinition>
									<RowDefinition Height="20"></RowDefinition>
									<RowDefinition Height="20"></RowDefinition>
								</Grid.RowDefinitions>
								<!--#endregion -->
								
								<!--#region TextBlock -->
								<TextBlock     
									Text="{Binding TestPlanId}"
									Grid.Column="0"
									HorizontalAlignment="Center"
									FontSize="13"
									Height="Auto"						                 
									FontWeight="Bold"
									Foreground="{DynamicResource ItemText}"/>

