             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" Width="300">
    

    <UserControl.DataContext>
        <Binding Path="RunExecutionStepListViewModel" Source="{StaticResource Locator}" />
