<UserControl x:Class="Tasker.View.QA.TestCases.AddExecutionTestCaseListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:classes="clr-namespace:Tasker.Classes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.DataContext>
        <Binding Path="AddExecutionTestCaseListViewModel" Source="{StaticResource Locator}"/>
    </UserControl.DataContext>

            <Grid>
        <!--#region Dimension -->

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="28" />
            <RowDefinition  />
        </Grid.RowDefinitions>

        <!--#endregion -->

        <!--#region Title -->

        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource AccentColor}"></SolidColorBrush>
            </Grid.Background>
            <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center" Text="Test Case" FontSize="13" FontWeight="SemiBold" />
        </Grid>

        <!--#endregion -->

        <!--#region FilterContorl -->

        <classes:FilterControl  Margin="1,1,0,1" Height="22" Header="Search"
							Grid.Row="1"    
							TargetControl="{Binding ElementName=ListTestCaseItems}"
							FilterTextBindingPath="Description">
            <classes:FilterControl.ListTextBindingPath>
                <classes:FilterAdapter Title="Objective" PropertyBound="Objetive"/>
                <classes:FilterAdapter Title="Description" PropertyBound="Description"/>
            </classes:FilterControl.ListTextBindingPath>
        </classes:FilterControl>

        <!--#endregion -->

        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="2">
            <Grid x:Name="Items">

                <!--#region Dimension -->

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--#endregion -->

                <!--#region ListBox -->

                <ListBox Grid.Row="1"
                 Name="ListTestCaseItems"
                 Background="#4F4F4D4D"
                 BorderBrush="Transparent"
                 ItemContainerStyle="{StaticResource RedGlowItemContainer1}"
                 ItemsSource="{Binding TestCases}"
                 SelectedItem="{Binding SelectedTestCaseItem}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid 
                                Background="#20A9A9A9"
						        HorizontalAlignment="Left"
						        VerticalAlignment="Center"			
						        Width="175">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0"
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,5,0"
                                       FontSize="12"
                                       Height="Auto"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource ItemText}"
                                       Text="{Binding TestCaseId}"
                                       TextWrapping="Wrap" />


