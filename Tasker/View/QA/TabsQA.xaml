<UserControl x:Class="Tasker.View.QA.TabsQA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="5,0,5,0">
            <mui:ModernTab Layout="Tab"  SelectedSource="/Content/Configure.xaml">
                <mui:ModernTab.Links>
                    <mui:Link DisplayName="TestPlan" Source="/view/QA/TestPlanMainView.xaml" />
                    <mui:Link DisplayName="TestCase" Source="/view/QA/TestCases/TestCaseMainView.xaml" />
                    <mui:Link DisplayName="Execution" Source="/view/QA/TestCases/ExecutionMainView.xaml"/>
                </mui:ModernTab.Links>
            </mui:ModernTab>
        </Grid>
    </Grid>
</UserControl>
