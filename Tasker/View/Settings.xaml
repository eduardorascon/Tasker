<UserControl x:Class="Tasker.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="5,0,5,0">
        <mui:ModernTab Layout="Tab"  SelectedSource="/Content/Configure.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="settings" Source="/Content/Configure.xaml" />
                    <mui:Link DisplayName="categories" Source="/view/Categories/CategoriesWorkSpaceView.xaml" />
                    <mui:Link DisplayName="appearance" Source="/Content/SettingsAppearance.xaml" />
                <mui:Link DisplayName="about" Source="/Content/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
        </Grid>
    </Grid>
</UserControl>
